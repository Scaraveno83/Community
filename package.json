{
  "name": "neon-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm --prefix packages/frontend run dev",
    "dev:backend": "npm --prefix packages/backend run dev",
    "build": "npm --prefix packages/frontend run build && npm --prefix packages/backend run build",
    "start": "npm --prefix packages/backend run start & npm --prefix packages/frontend run start",
    "lint": "npm run lint --workspaces",
    "test": "npm test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
